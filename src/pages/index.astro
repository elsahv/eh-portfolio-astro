---
import MainLayout from "../layouts/MainLayout.astro";
import Contact from "../components/sections/Contact.astro";
const programmingLanguages = await Astro.glob("./specialties/*.md");
const whoIHelp = await Astro.glob("./whoIHelp/*.md");
import Card from "../components/ui/Card.astro";
import LeftPanel from "../layouts/LeftPanel.astro";
import Footer from "../components/Footer.astro";
---

<MainLayout>
  <div id="homepage-wrapper" class="">
    <LeftPanel />
    <div
      id="RIGHT-PANEL"
      class="text- md:pr-5 font-medium 2xl:h-screen h-full md:absolute relative right-0 md:w-3/5 w-full md:overflow-y-scroll overflow-x-hidden xl"
    >

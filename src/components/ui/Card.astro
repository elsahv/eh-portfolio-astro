---
const frontmatter = Astro.props;
const { title, image, alt, url, testItem1, id } = frontmatter;
---

<div id="CARD" class="mt-5 py-5 pacity-80 hover:opacity-100 duration-500 bg-">
  <div class="flex text-gray-600 pt-1 pb-1 pl- pr-1 saturate-50">
    <h3 class="text-xl font-semibold">{title}</h3>
  </div>

  <div class="grid 2xl:grid-cols-5 grid-cols-1 gap-5">
    <div id="sq1" class="2xl:col-span-4">
      <a href={url}>
        <img
          src={image}
          class="mt-1 mr-5 p-1 rounded border border-gray-400 hover:border-gray-600 drop-shadow-xl hover:drop-shadow-3xl border border-gray-300"
          alt={alt}
        />
      </a>
    </div>

    <div id="sq2" class="2xl:col-span-1 pt-5">
      <div id="sq2-container" class="pl-1 rounded p-1 border border-black">
        <p class="pl-1">
          <strong>currently working on: </strong>sentence about what I'm working
          on
        </p>
      </div>
      <div class="pl-1 pt-1">
        <p class="">
          {testItem1}
          <p class="text- underline">
            <a href={url}> view project </a>
          </p>
        </p>
      </div>
    </div>

---
const frontmatter = Astro.props;
const {
  title,
  image,
  alt,
  url,
  testItem1,
  websiteNumber,
  testItem3,
  testItem4,
} = frontmatter;
---

<div id="sq" class="">
  <a href={url}>
    <div class="">
      <div>{websiteNumber}</div>
    </div>

    <img
      src={image}
      class="drop-shadow-md border border-onyx rounded"
      alt={alt}
    />
    <div
      id="post-excerpt"
      class="px-5 mx-5 flex flex-col justify-center text-onyx bg-papaya mb-5 ml-1 md:pl-4 pl-1 pr-2 pt-2 pb-3 drop-shadow-md"
    >
      <h2 class="text-xl font-semibold">
        {title}
      </h2>
      <p class="pt-1 opacity-80 text-lg">{testItem1}</p>
      <div id="btn-wrapper" class="mt-2">
        <button
          class="bg-munsell text-aliceBlue px-2 py-1 rounded opacity-70 hover:opacity-100"
          >read more</button
        >
      </div>
    </div>
  </a>
</div>

---
export interface Props {
  title: string;
  paragraph1: string;
  paragraph2: string;
  mainImg: string;
}

const { title, paragraph1, paragraph2, mainImg } = Astro.props as Props;
---

<div id="about-me-wrapper" class="bg- flex justify-center my-5 px-3">
  <div id="about-me-container" class="">
    <div class="text-black-400"></div>
    <div id="img-container" class="mt-5 pr-5 pt-5">
      <h2 id="dynamic-title" class="font- pr-2">
        {title}
      </h2>

      <div id="img-wrapper" class="">
        <img src={mainImg} id="img-icon" alt="" width="65" class="opacity-80" />
      </div>
    </div>
    <div class="py- px-1">
      <p id="about-paragraph2" class="bg-">-{paragraph1}</p>
      <p id="" class="">{paragraph2}</p>
    </div>
  </div>
</div>
